# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database - Supabase PostgreSQL (PRODUCTION)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# JWT Secret (IMPORTANT: Use a strong, unique secret for production)
JWT_SECRET="your-super-strong-production-jwt-secret-here"

# CORS Origin (Your Vercel frontend URL)
CORS_ORIGIN="https://your-app.vercel.app"

# Node Environment
NODE_ENV="production"

# Server Port (Render uses PORT environment variable)
PORT=10000
